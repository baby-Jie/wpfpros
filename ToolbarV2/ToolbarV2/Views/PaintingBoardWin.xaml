<Window x:Class="ToolbarV2.Views.PaintingBoardWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolbarV2.Views"
        xmlns:controls="clr-namespace:PainingBoard.Controls;assembly=PainingBoard"
        mc:Ignorable="d"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowState="Maximized"
        ShowInTaskbar="False"
        Topmost="True"
        Title="PaintingBoardWin" Height="450" Width="800">
    <Grid>
        <controls:InkPaintingBoard x:Name="MyPaintingBoard"
                                   ForceCursor="True"
                                   Cursor="Hand"></controls:InkPaintingBoard>
    </Grid>
</Window>
